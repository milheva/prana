{
    "info": {
        "name": "Prana Medical API",
        "description": "API Collection for Prana Medical E-Commerce",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "_postman_id": "prana-medical-api-v1",
        "version": "1.0.0"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000/api/v1",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{token}}",
                "type": "string"
            }
        ]
    },
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"password_confirmation\": \"password123\",\n  \"phone\": \"081234567890\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/register",
                            "host": ["{{base_url}}"],
                            "path": ["register"]
                        }
                    }
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.collectionVariables.set(\"token\", jsonData.data.token);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"customer@example.com\",\n  \"password\": \"password\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/login",
                            "host": ["{{base_url}}"],
                            "path": ["login"]
                        }
                    }
                },
                {
                    "name": "Get Profile",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/profile",
                            "host": ["{{base_url}}"],
                            "path": ["profile"]
                        }
                    }
                },
                {
                    "name": "Update Profile",
                    "request": {
                        "method": "PUT",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Updated Name\",\n  \"phone\": \"081234567899\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/profile",
                            "host": ["{{base_url}}"],
                            "path": ["profile"]
                        }
                    }
                },
                {
                    "name": "Change Password",
                    "request": {
                        "method": "PUT",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"current_password\": \"password\",\n  \"password\": \"newpassword123\",\n  \"password_confirmation\": \"newpassword123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/profile/password",
                            "host": ["{{base_url}}"],
                            "path": ["profile", "password"]
                        }
                    }
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/logout",
                            "host": ["{{base_url}}"],
                            "path": ["logout"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Products",
            "item": [
                {
                    "name": "Get All Products",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/products?per_page=10&sort_by=name&sort_order=asc",
                            "host": ["{{base_url}}"],
                            "path": ["products"],
                            "query": [
                                {
                                    "key": "per_page",
                                    "value": "10"
                                },
                                {
                                    "key": "sort_by",
                                    "value": "name"
                                },
                                {
                                    "key": "sort_order",
                                    "value": "asc"
                                },
                                {
                                    "key": "search",
                                    "value": "thermometer",
                                    "disabled": true
                                },
                                {
                                    "key": "category_id",
                                    "value": "1",
                                    "disabled": true
                                },
                                {
                                    "key": "in_stock",
                                    "value": "true",
                                    "disabled": true
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Product by ID",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/products/1",
                            "host": ["{{base_url}}"],
                            "path": ["products", "1"]
                        }
                    }
                },
                {
                    "name": "Get Featured Products",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/products/featured?limit=8",
                            "host": ["{{base_url}}"],
                            "path": ["products", "featured"],
                            "query": [
                                {
                                    "key": "limit",
                                    "value": "8"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Related Products",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/products/1/related?limit=4",
                            "host": ["{{base_url}}"],
                            "path": ["products", "1", "related"],
                            "query": [
                                {
                                    "key": "limit",
                                    "value": "4"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Search Products",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/search?q=thermometer",
                            "host": ["{{base_url}}"],
                            "path": ["search"],
                            "query": [
                                {
                                    "key": "q",
                                    "value": "thermometer"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Categories",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/categories",
                            "host": ["{{base_url}}"],
                            "path": ["categories"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Cart",
            "item": [
                {
                    "name": "Get Cart",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/cart",
                            "host": ["{{base_url}}"],
                            "path": ["cart"]
                        }
                    }
                },
                {
                    "name": "Add to Cart",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"product_id\": 1,\n  \"quantity\": 2\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/cart",
                            "host": ["{{base_url}}"],
                            "path": ["cart"]
                        }
                    }
                },
                {
                    "name": "Update Cart Item",
                    "request": {
                        "method": "PUT",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"quantity\": 5\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/cart/1",
                            "host": ["{{base_url}}"],
                            "path": ["cart", "1"]
                        }
                    }
                },
                {
                    "name": "Remove from Cart",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/cart/1",
                            "host": ["{{base_url}}"],
                            "path": ["cart", "1"]
                        }
                    }
                },
                {
                    "name": "Clear Cart",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/cart",
                            "host": ["{{base_url}}"],
                            "path": ["cart"]
                        }
                    }
                },
                {
                    "name": "Get Cart Count",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/cart/count",
                            "host": ["{{base_url}}"],
                            "path": ["cart", "count"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Orders",
            "item": [
                {
                    "name": "Get Orders",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/orders?per_page=10&sort_by=created_at&sort_order=desc",
                            "host": ["{{base_url}}"],
                            "path": ["orders"],
                            "query": [
                                {
                                    "key": "per_page",
                                    "value": "10"
                                },
                                {
                                    "key": "sort_by",
                                    "value": "created_at"
                                },
                                {
                                    "key": "sort_order",
                                    "value": "desc"
                                },
                                {
                                    "key": "status",
                                    "value": "pending",
                                    "disabled": true
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Order Details",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/orders/1",
                            "host": ["{{base_url}}"],
                            "path": ["orders", "1"]
                        }
                    }
                },
                {
                    "name": "Create Order (Checkout)",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"payment_method\": \"bank_transfer\",\n  \"shipping_name\": \"John Doe\",\n  \"shipping_phone\": \"081234567890\",\n  \"shipping_address\": \"Jl. Contoh No. 123\",\n  \"shipping_city\": \"Jakarta\",\n  \"shipping_province\": \"DKI Jakarta\",\n  \"shipping_postal_code\": \"12345\",\n  \"notes\": \"Please deliver in the morning\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/orders",
                            "host": ["{{base_url}}"],
                            "path": ["orders"]
                        }
                    }
                },
                {
                    "name": "Cancel Order",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/orders/1/cancel",
                            "host": ["{{base_url}}"],
                            "path": ["orders", "1", "cancel"]
                        }
                    }
                },
                {
                    "name": "Get Order Statistics",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/orders/statistics",
                            "host": ["{{base_url}}"],
                            "path": ["orders", "statistics"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Health Check",
            "request": {
                "auth": {
                    "type": "noauth"
                },
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://localhost:8000/api/health",
                    "protocol": "http",
                    "host": ["localhost"],
                    "port": "8000",
                    "path": ["api", "health"]
                }
            }
        }
    ]
}
